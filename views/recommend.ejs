<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-bar-rating/1.2.1/jquery.barrating.min.js" ></script>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-bar-rating/1.2.1/themes/fontawesome-stars.min.css">
        <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css">
        
        <link rel="stylesheet" href="/index_style.css">
        <script src="/predictions.js"></script>
        <script src="/index-behaviour.js"></script>
    </head>
    <% include ./partials/header %>
    <div class="container-fluid">  
            <div class="row">
                <blockquote class="blockquote mx-auto">
                        <p class="mb-3 mt-3 text-center">We did out best to recommend movies for you.</p>
                        <footer class="blockquote-footer">Hope you <cite title="Source Title">liked it.</cite></footer>
                </blockquote>
                </div>
        <div class="row " id="card-row">
            <%for(var i=0; i < movies_data.length; i++){%>  
                <div class="col-md-3">
                    <div class="card bg-info text-center">
                        <div class="card-header text-white text-right bg-dark">#<%=i%></div>
                        <div class="card-body text-white">
                                <h5 class="card-title font-weight-bold"><%=movies_data[i].Title%></h5>
                                <p class="card-text">Possible rating from you: <strong><%=movies_data[i].Rating%></strong> /5</p>
                        </div>
                    </div>
                    

                </div>
            <%}%>        
        </div>
        <div class="row">
            <div class="col-md-4 ml-2 mt-3">
                    <a href="/index"  id="return-btn" class="btn btn-lg btn-outline-info font-weight-bold" onclick="console.log('Return button is clicked.');">Return Home <span class="glyphicon glyphicon-chevron-left"></span></a>
            </div>
        </div>
    </div>
</html>
